{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env",
    ".gitignore",
    ".eslintrc.js",
    ".commitlintrc.json",
    "tsconfig.json",
    "tsconfig.cdk.json",
    "tsconfig.next.json",
    "sonar-project.properties",
    "turbo.json"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
